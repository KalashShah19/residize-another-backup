    function getStarsHTML(rating) {
      let starsHTML = '';
      for (let i = 1; i <= 5; i++) {
        if (i <= rating) {
          starsHTML += `<span class="icon-star text-warning"></span>`;
        } else {
          starsHTML += `<span class="icon-star text-muted"></span>`;
        }
      }
      return starsHTML;
